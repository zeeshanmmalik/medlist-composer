%h1 Listing patients

%table.table.table-striped
  %tr.column-header
    %th First Name
    %th Last Name
    %th MRN
    %th Date of Birth
    %th Program
    %th Admission Date
    / %th Discharge Date
    %th Pharmacist
    %th
    %th
    %th
  - @patients.each do |patient|
    %tr{class: cycle('odd', 'even')}
      %td= patient.first_name
      %td= patient.last_name
      %td= patient.mrn
      %td= patient.date_of_birth
      %td= patient.program
      %td= patient.admission_date
      / %td= patient.discharge_date
      %td= patient.pharmacist_id
      %td= link_to 'Show', patient
      %td= link_to 'Edit', edit_patient_path(patient)
      %td= link_to 'Destroy', patient, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Patient', new_patient_path
