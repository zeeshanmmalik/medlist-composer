= form_for @patient do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient.errors.count, "error")} prohibited this patient from being saved:"
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :mrn
    = f.text_field :mrn
  .field
    = f.label :date_of_birth
    = f.date_select :date_of_birth
  .field
    = f.label :program
    = f.text_field :program
  .field
    = f.label :admission_date
    = f.datetime_select :admission_date
  /
    .field
      = f.label :discharge_date
      = f.datetime_select :discharge_date
  .field
    = f.label :pharmacist_id
    = f.number_field :pharmacist_id
  .actions
    = f.submit 'Save'
