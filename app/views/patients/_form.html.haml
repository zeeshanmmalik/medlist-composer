= form_for @patient do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient.errors.count, "error")} prohibited this patient from being saved:"
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .clearfix
  .field
    = f.label :mrn, 'MRN'
    = f.text_field :mrn
  .field
    = f.label :date_of_birth
    = f.text_field :date_of_birth, data: {behaviour: 'datepicker'}
  .clearfix
  .field
    = f.label :program
    = f.select :program, %w[Heart Kidney Liver Lung], { include_blank: "Select a program..." }
  .field
    = f.label :admission_date
    = f.text_field :admission_date, data: {behaviour: 'datepicker'}
  .clearfix
  .field
    = f.label :discharge_date
    = f.text_field :discharge_date, data: {behaviour: 'datepicker'}
  .field
    = f.label :pharmacist_id
    = f.select :pharmacist_id, Pharmacist.all.collect {|p| [p.name, p.id]}, { include_blank: "Select a pharmacist..." }
  .clearfix
  .actions
    = f.submit 'Save', class: 'btn btn-large'
