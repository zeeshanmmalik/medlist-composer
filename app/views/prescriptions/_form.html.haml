= form_for @prescription do |f|
  - if @prescription.errors.any?
    #error_explanation
      %h2= "#{pluralize(@prescription.errors.count, "error")} prohibited this prescription from being saved:"
      %ul
        - @prescription.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :patient
    = f.text_field :patient
  .field
    = f.label :pharmacist
    = f.text_field :pharmacist
  .field
    = f.label :physician
    = f.text_field :physician
  .field
    = f.label :base_template_id
    = f.number_field :base_template_id
  .actions
    = f.submit 'Save'
